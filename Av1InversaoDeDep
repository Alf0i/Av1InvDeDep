using system;

public class Program{
    public static void Main(string[] args) {
        int count = 0;
        public Contador c = new Contador();
        while(true) {
            Count++;
            c.VerificaHoras(Count);
            if(c.VerificaHoras(Count) == 0){
                return false;
            }
        }

    }
}

public class Contador{
    int horas;

    public Contador contador(int horas){
        this.horas = horas;
    }

    public Al = Alarme;

    fun VerificaHoras(){
        if(horas == 17){
            return(Alarme.AcionarSom, Alarme.Vibrar);
        }
        else{
            return 0;
        }
    }
}

public class Alarme{
    public fun Vibrar(){
        Console.WriteLine($" Vibrando!!!");
    }

    public fun AcionarSom(){
        Console.WriteLine($" trim-trim-trim...");
    }

}
