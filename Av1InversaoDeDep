using system;

public class Program
{
    public static void Main(string[] args)
    {
        int count = 0;
        int i = 0;
        Contador c = new Contador();

        while (i == 0)
        {

            Console.WriteLine(count);

            count++;
            
            i = c.VerificaHoras(count);
            
        } 

    } 
}


public class Contador{
    int horas;

    public Contador contador(int horas){
        this.horas = horas;
    }

    public Al = Alarme;

    public int VerificaHoras(){
        if(horas == 17){
            Alarme.AcionarSom();
            Alarme.Vibrar();
            return 1;
        }
        else{
            return 0;
        }
    }
}

public class Alarme{
    public fun Vibrar(){
        Console.WriteLine($" Vibrando!!!");
    }

    public fun AcionarSom(){
        Console.WriteLine($" trim-trim-trim...");
    }

}
